{
	"$schema": "https://biomejs.dev/schemas/1.4.0/schema.json",
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineWidth": 80
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single"
		}
	},
	"files": {
		"ignore": [
			"node_modules",
			"dist",
			".release-plan.json",
			"package.json",
			"CHANGELOG.md",
			"pnpm-lock.yaml"
		]
	}
}
